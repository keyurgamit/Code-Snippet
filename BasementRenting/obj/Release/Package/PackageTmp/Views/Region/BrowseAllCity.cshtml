<div class="browse-all-cities">
    <div class="breadcrumb">
        <div class="container">
            <div class="breadcrumb-item active">Browse <span class="province-name"></span></div>
        </div>
    </div>

    <section class="secton-province commenview_province_city">
        <div class="container">
            <div class="card">
                <div class="card-header">Cities/Towns </div>
                <div class="card-body">
                    <ul class="ullisting city-listing-by-province">
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <li class="lilist">
                                    <div class="liinner">
                                        @*<span class="spanlink" id="cId-@item.Id" >@Html.DisplayFor(modelItem => item.Name)</span>*@
                                        <a class="spanlink" href="@Url.Action("get-properties-by-city", "property", new { cityId=item.Id, city = item.Name, sortby = "unsorted", pageindex = 1 })" id="cId-@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
                                        <icon>»</icon>
                                    </div>
                                </li>

                                @*<script>
                                    $("#cId-@item.Id").click(function () {
                                        $.ajax({
                                            url: "@Url.Action("getPropertiesByCityId", "Property")",
                                            type: "POST",
                                            data: { 'CityId': @item.Id },
                                            success: function (data) {
                                                $(".browse-all-cities").html(data);
                                            },
                                            error: function () {
                                                console.log("Error Occured!");
                                            }
                                        });//end - ajax call
                                    });
                                </script>*@
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>
    </section>
</div>

