@if (ViewBag.RegisterStatusMessage != null)
{
    <div class="container">
        <!-- Trigger the modal with a button -->
        <button type="button" class="btn btn-info btn-lg register-success-openmodel" style="display:none;" data-toggle="modal" data-target="#myModal">Open Modal</button>

        <!-- Modal -->
        <div class="modal in fade register_succe_modal" id="myModal" role="dialog">
            <div class="modal-dialog">
                <div class="modal-dialog-inner">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close register-success-closemodel" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Registered</h4>
                        </div>
                        <div class="modal-body">
                            <p>@ViewBag.RegisterStatusMessage</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $(".register-success-openmodel").click();
            setTimeout(function () {
                $(".register-success-closemodel").click();
            }, 5000);
        }); //end of doc ready
    </script>
}